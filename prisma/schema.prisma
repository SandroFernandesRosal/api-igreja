generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  githubId  Int    @unique
  name      String
  login     String
  avatarUrl String

 news New[]  
 newstomazinho NewTomazinho[]
 newscaxias NewCaxias[]
}

model New {
  id     String @id @default(uuid())
  userId String

  coverUrl  String
  content   String
  title     String
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  page String

  user User @relation(fields: [userId], references: [id])
}

model Ministerio {
  id     String @id @default(uuid())
  userId String

  name  String
  title String
  local String
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  
}

model Agenda {
